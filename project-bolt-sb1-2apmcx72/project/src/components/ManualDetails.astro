<style>
  .manual-details {
    background-color: var(--color-background);
  }

  .subtitle {
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
    margin-bottom: var(--space-6);
  }

  .features {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-4);
    margin-bottom: var(--space-6);
  }

  .feature {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    padding: var(--space-4);
    background-color: white;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow);
  }

  .feature-icon {
    background-color: var(--color-primary-light);
    color: white;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .feature-text p {
    margin-bottom: 0;
  }

  .ingredients-note {
    background-color: white;
    border-radius: var(--border-radius);
    padding: var(--space-5);
    box-shadow: var(--shadow);
    text-align: center;
    max-width: 800px;
    margin: var(--space-8) auto 0;
  }

  .ingredients-note p {
    font-weight: 600;
    font-size: 1.125rem;
    margin-bottom: var(--space-4);
    color: var(--color-primary);
  }

  .secure-badge {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    margin-top: var(--space-4);
    font-weight: 600;
    font-size: 0.875rem;
    color: var(--color-text-light);
  }

  @media (min-width: 768px) {
    .features {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>