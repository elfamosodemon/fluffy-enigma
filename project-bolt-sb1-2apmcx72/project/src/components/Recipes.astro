    </div>
  </div>
</section>

<style>
  .recipe-categories {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-6);
    margin-bottom: var(--space-8);
  }

  .recipe-category {
    background-color: white;
    padding: var(--space-5);
    border-radius: var(--border-radius);
    box-shadow: var(--shadow);
  }

  .recipe-category h3 {
    color: var(--color-primary);
    margin-bottom: var(--space-3);
  }

  .recipe-category ul {
    margin-left: var(--space-5);
    margin-bottom: var(--space-4);
  }

  .recipe-category li {
    margin-bottom: var(--space-2);
  }

  .recipe-count {
    text-align: center;
    font-size: 1.5rem;
    font-weight: 600;
    margin: var(--space-8) 0;
    color: var(--color-primary);
  }

  .recipe-sample {
    background-color: white;
    border-radius: var(--border-radius);
    overflow: hidden;
    box-shadow: var(--shadow);
    transition: transform 0.3s ease;
  }

  .recipe-sample:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-lg);
  }

  .recipe-sample img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .recipe-sample h4 {
    padding: var(--space-3);
    text-align: center;
    margin-bottom: 0;
  }

  @media (min-width: 768px) {
    .recipe-categories {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>